{
  "$schema": "https://opencode.ai/config.json",
  "theme": "vesper",
  "formatter": {
    "biome": {
      "command": ["bun", "run", "biome", "format", "--write", "$FILE"],
      "extensions": [".js", ".jsx", ".ts", ".tsx", ".json", ".css"]
    }
  },
  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": {
      "enabled": true
    }
  }
}
