{
  "$schema": "https://opencode.ai/theme.json",
  "name": "mode",
  "type": "dark",
  "defs": {
    "mode_bg": "#151515",
    "mode_bg_panel": "#151515",
    "mode_bg_accent": "#252525",
    "mode_text": "#c3c9c2",
    "mode_text_bright": "#e7e7e7",
    "mode_text_muted": "#4a4a4a",
    "mode_blue_primary": "#807c82",
    "mode_blue_secondary": "#807c82",
    "mode_blue_operator": "#807c82",
    "mode_teal": "#737a6f",
    "mode_teal_alt": "#737a6f",
    "mode_red": "#78535D",
    "mode_yellow": "#a59e8a",
    "mode_magenta": "#e0c6cd",

    "l_bg": "#F5F7FA",
    "l_bg_panel": "#FFFFFF",
    "l_bg_accent": "#DDE4EE",
    "l_text": "#212529",
    "l_text_bright": "#000000",
    "l_text_muted": "#5c677d",
    "l_blue_primary": "#005A9E",
    "l_blue_secondary": "#007BAA",
    "l_blue_operator": "#4A6D8C",
    "l_teal": "#006D5B",
    "l_teal_alt": "#007A66",
    "l_red": "#B02E6A",
    "l_yellow": "#7D7700",
    "l_magenta": "#C13B84"
  },
  "theme": {
    "primary": {
      "dark": "mode_blue_primary",
      "light": "l_blue_primary"
    },
    "secondary": {
      "dark": "mode_magenta",
      "light": "l_magenta"
    },
    "accent": {
      "dark": "mode_teal",
      "light": "l_teal"
    },
    "error": {
      "dark": "mode_red",
      "light": "l_red"
    },
    "warning": {
      "dark": "mode_yellow",
      "light": "l_yellow"
    },
    "success": {
      "dark": "mode_teal_alt",
      "light": "l_teal_alt"
    },
    "info": {
      "dark": "mode_blue_secondary",
      "light": "l_blue_secondary"
    },
    "text": {
      "dark": "mode_text",
      "light": "l_text"
    },
    "textMuted": {
      "dark": "mode_text_muted",
      "light": "l_text_muted"
    },
    "background": {
      "dark": "mode_bg",
      "light": "l_bg"
    },
    "backgroundPanel": {
      "dark": "mode_bg_panel",
      "light": "l_bg_panel"
    },
    "backgroundElement": {
      "dark": "mode_bg_accent",
      "light": "l_bg_accent"
    },
    "border": {
      "dark": "mode_bg_accent",
      "light": "l_bg_accent"
    },
    "borderActive": {
      "dark": "mode_text_muted",
      "light": "l_text_muted"
    },
    "borderSubtle": {
      "dark": "mode_bg_accent",
      "light": "l_bg_accent"
    },
    "diffAdded": {
      "dark": "mode_teal_alt",
      "light": "l_teal_alt"
    },
    "diffRemoved": {
      "dark": "mode_red",
      "light": "l_red"
    },
    "diffContext": {
      "dark": "mode_text_muted",
      "light": "l_text_muted"
    },
    "diffHunkHeader": {
      "dark": "mode_text_muted",
      "light": "l_text_muted"
    },
    "diffHighlightAdded": {
      "dark": "mode_teal_alt",
      "light": "l_teal_alt"
    },
    "diffHighlightRemoved": {
      "dark": "mode_red",
      "light": "l_red"
    },
    "diffAddedBg": {
      "dark": "mode_bg_panel",
      "light": "l_bg_panel"
    },
    "diffRemovedBg": {
      "dark": "mode_bg_panel",
      "light": "l_bg_panel"
    },
    "diffContextBg": {
      "dark": "mode_bg",
      "light": "l_bg"
    },
    "diffLineNumber": {
      "dark": "mode_text_muted",
      "light": "l_text_muted"
    },
    "diffAddedLineNumberBg": {
      "dark": "mode_bg_panel",
      "light": "l_bg_panel"
    },
    "diffRemovedLineNumberBg": {
      "dark": "mode_bg_panel",
      "light": "l_bg_panel"
    },
    "markdownText": {
      "dark": "mode_text",
      "light": "l_text"
    },
    "markdownHeading": {
      "dark": "mode_text_bright",
      "light": "l_text_bright"
    },
    "markdownLink": {
      "dark": "mode_blue_primary",
      "light": "l_blue_primary"
    },
    "markdownLinkText": {
      "dark": "mode_blue_primary",
      "light": "l_blue_primary"
    },
    "markdownCode": {
      "dark": "mode_blue_operator",
      "light": "l_blue_operator"
    },
    "markdownBlockQuote": {
      "dark": "mode_bg_accent",
      "light": "l_bg_accent"
    },
    "markdownEmph": {
      "dark": "mode_magenta",
      "light": "l_magenta"
    },
    "markdownStrong": {
      "dark": "mode_text_bright",
      "light": "l_text_bright"
    },
    "markdownHorizontalRule": {
      "dark": "mode_bg_accent",
      "light": "l_bg_accent"
    },
    "markdownListItem": {
      "dark": "mode_text",
      "light": "l_text"
    },
    "markdownListEnumeration": {
      "dark": "mode_blue_primary",
      "light": "l_blue_primary"
    },
    "markdownImage": {
      "dark": "mode_blue_secondary",
      "light": "l_blue_secondary"
    },
    "markdownImageText": {
      "dark": "mode_blue_secondary",
      "light": "l_blue_secondary"
    },
    "markdownCodeBlock": {
      "dark": "mode_text",
      "light": "l_text"
    },
    "syntaxComment": {
      "dark": "mode_text_muted",
      "light": "l_text_muted"
    },
    "syntaxKeyword": {
      "dark": "mode_teal",
      "light": "l_teal"
    },
    "syntaxFunction": {
      "dark": "mode_blue_primary",
      "light": "l_blue_primary"
    },
    "syntaxVariable": {
      "dark": "mode_text_bright",
      "light": "l_text_bright"
    },
    "syntaxString": {
      "dark": "mode_teal",
      "light": "l_teal"
    },
    "syntaxNumber": {
      "dark": "mode_teal",
      "light": "l_teal"
    },
    "syntaxType": {
      "dark": "mode_text",
      "light": "l_text"
    },
    "syntaxOperator": {
      "dark": "mode_blue_operator",
      "light": "l_blue_operator"
    },
    "syntaxPunctuation": {
      "dark": "mode_text",
      "light": "l_text"
    }
  }
}
